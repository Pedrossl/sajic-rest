generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://sajic:123456@localhost:5432/sajic_db?schema=public"
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  Food      Food[]
}

model Food {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  categoryId  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Category    Category @relation(fields: [categoryId], references: [id])
  Review      Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  foodId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime
  Food      Food     @relation(fields: [foodId], references: [id])
}
